%dbd ALL = NOPASSWD: /usr/sbin/pbuilder --build --configfile /etc/dbd.conf *.dsc
%dbd ALL = NOPASSWD: /usr/sbin/pbuilder --login --configfile /etc/dbd.conf --save-after-login
%dbd ALL = NOPASSWD: /usr/bin/reprepro --basedir * include * *.changes
%dbd ALL = NOPASSWD: /usr/bin/reprepro --basedir * remove * *
